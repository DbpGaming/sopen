#!/bin/sh
VIDEO="mpv"
AUDIO="mpv"
HTTP="links"
GOPHER="lynx"
IMAGE="sxiv"
URL_IMAGE="feh"
BOOKS="zathura"
COMIC=$BOOKS
PDF=$BOOKS
EPUB=$BOOKS
DJVU=$BOOKS
MULTIEMU="mednafen"
NES="mesen"
SNES="bsnes"

if [ -z "$1" ]
then
	return 0
fi

case $(echo "$1" | tr '[:upper:]' '[:lower:]') in
*.epub) $EPUB "$1";;
*.pdf) $PDF "$1";;
*.cb[zr] | *.cb) $COMIC "$1";;
*.djvu) $DJVU "$1";;
*.mkv | *.mp4 | *.m4v) $VIDEO "$1";;
*.mp3 | *.flac) $AUDIO "$1";;
https://*.png | https://*.jpg | http://*.png | http://*.jpg) $URL_IMAGE "$1";;
*.png | *.jpg) $IMAGE "$1";;
*.nes) $NES "$1";;
*.sfc) $SNES "$1";;
*youtube.com/watch* | *yewtu.be/watch* | *youtu.be*) $VIDEO "$1";;
*youtube.com*) $HTTP "$(echo "$1" | sed -e 's/youtube.com/yewtu.be/g')";;
*twitter.com/*) $HTTP "$(echo "$1" | sed -e 's/twitter.com/nitter.net/g')";;
https://* | http://* | *.htm | *.html) $HTTP "$1";;
gopher://*) $GOPHER "$1";;
*) vis "$1";;
esac